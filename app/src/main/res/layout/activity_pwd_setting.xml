<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.tsiangleo.sr.client.activity.ServerSettingActivity">


    <TextView
        android:id="@+id/showTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="@drawable/bg"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:gravity="center"
        android:orientation="vertical">

        <TableRow android:id="@+id/oldPwdTableRow">
            <TextView
                android:text="原始密码："
                android:textSize="8pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <EditText
                android:textSize="8pt"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:inputType="textPassword"
                android:id="@+id/oldPwdEditText" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="输入密码："
                android:textSize="8pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <EditText
                android:textSize="8pt"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:inputType="textPassword"
                android:id="@+id/pwd1EditText" />


        </TableRow>

        <TableRow>
            <TextView
                android:text="重复密码："
                android:textSize="8pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:textSize="8pt"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:id="@+id/pwd2EditText"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />

        </TableRow>


    </TableLayout>

    <Button
        android:textColor="#FFFFFF"
        android:background="@drawable/view_yuan_button"
        android:id="@+id/savePwdButton"
        android:layout_margin="20px"
        android:textSize="8pt"
        android:text="保存"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
